<div>ジャンル一覧・追加</div>
ジャンル
<%= form_for @genre, url:admin_genres_path do |f| %>
<%= f.text_field :name %>
<%= f.radio_button :is_active, :true, :checked => true %> 有効
<%= f.radio_button :is_active, :false %> 無効
<%= f.submit "追加", class:"btn btn-primary btn-xs" %>
<% end %>
<table>
	<tr>
		<th>ジャンル</th>
		<th>状態</th>
	</tr>
	<% @genres.each do |genre| %>
	<tr>
		<td><%= genre.name %></td>
		<td><% if genre.is_active == true %>
			有効
			<% else %>
			無効
			<% end %>
		</td>
		<td><%= link_to edit_admin_genre_path(genre), class:"btn btn-primary btn-xs" do %>
		編集する
		<% end %>
	</td>
	</tr>
	<% end %>
</table>

