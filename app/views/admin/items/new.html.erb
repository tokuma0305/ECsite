
<div>商品新規登録</div>
<%= form_for @item, url: admin_items_path do |f| %>
<%= f.attachment_field :image %>
<div>商品名
<%= f.text_field :name %></div>
<div>商品説明
<%= f.text_area :description %></div>
<div>ジャンル
<%= f.select :genre_id, Genre.all.map { |genre| [genre.name, genre.id] }, { include_blank: '選択してください'} %></div>
<div>税抜価格
<%= f.text_field :price %>円</div>
<div>販売ステータス
<%= f.select :is_active, ['販売中', '販売停止中'], {include_blank: '選択ボックス'} %></div>
<div><%= f.submit "新規登録", class:"btn btn-primary btn-xs"  %></div>
<% end %>
