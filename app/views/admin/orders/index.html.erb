<div class="silver">
    注文履歴一覧
</div>
<% @orders.each do |order| %>
<table class="table table-bordered">
    <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
    </tr>
    <tr>
        <td><%= order.created_at %></td>
        <td><%= order.end_user.lastname %><%= order.end_user.firstname %></td>
        <td><%= order.order_details.sum(:amount) %></td>
        <td><%= order.order_status_i18n %></td>
    <tr>
<% end %>