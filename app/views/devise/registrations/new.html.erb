<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
    <%= f.label :セイ %><br />
    <%= f.text_field :katakana_lastname, autofocus: true, autocomplete: "katakana_lastname" %>
  </div>
      <div class="field">
    <%= f.label :メイ %><br />
    <%= f.text_field :katakana_firstname, autofocus: true, autocomplete: "katakana_firstname" %>
  </div>
  <div class="field">
    <%= f.label :姓 %><br />
    <%= f.text_field :lastname, autofocus: true, autocomplete: "lastname" %>
  </div>
    <div class="field">
    <%= f.label :名 %><br />
    <%= f.text_field :firstname, autofocus: true, autocomplete: "firstname" %>
  </div>
    <div class="field">
    <%= f.label :郵便番号 %><br />
    <%= f.text_field :zipcode, autofocus: true, autocomplete: "zipcode" %>
  </div>
    <div class="field">
    <%= f.label :住所%><br />
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>
    <div class="field">
    <%= f.label :電話番号 %><br />
    <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
