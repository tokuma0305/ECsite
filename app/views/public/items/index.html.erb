<div class="container">
    <div class="row">
        <div class="col-lg-1">
        </div>
        <div class="col-lg-11">
            <%  @items.each do |item| %>
            <h2 class="item">商品一覧</h2>
            <p>
                <%= link_to item_path(item) do %>
                <%= attachment_image_tag item, :image, size:"100x50" %>
                <% end %>
            </p>
            <p>
                <%= item.name %>
            </p>
            <p>
                <%= addTax(item.price,1.1) %>
            </p>
            <% end %>
        </div>
    </div>
</div>